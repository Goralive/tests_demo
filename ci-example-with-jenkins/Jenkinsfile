pipeline {
    agent { label 'agent-mac' }

    stages {
        stage('Run Tests Across Python Versions') {
            matrix {
                axes {
                    axis {
                        name 'PYTHON_VERSION'
                        values 'python3.11', 'python3.12'
                    }
                }
                stages {
                    stage('Setup and Test') {
                        steps {
                            echo "Setting up virtual environment with ${PYTHON_VERSION}..."
                            script {
                                // Creating a virtual environment with the specified Python version
                                sh "${PYTHON_VERSION} -m venv myenv-${PYTHON_VERSION}"
                                sh "source myenv-${PYTHON_VERSION}/bin/activate"
                                sh "${WORKSPACE}/myenv-${PYTHON_VERSION}/bin/pip install -r requirements.txt"
                                sh '''
                                    cd unit_tests
                                    ${WORKSPACE}/myenv-${PYTHON_VERSION}/bin/python -m unittest discover -s . -v
                                '''
                            }
                        }
                    }
                }
            }
        }
    }
}
